          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to "LIFE'S ON", root_path ,:class=>"navbar-brand",:style=>'color:#FFFFFF;' %>
         
      
          <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul  class="nav navbar-nav">
 <%if(current_user) %>
            <li ><%= link_to "Home", root_path ,:style=>'color:#FFFFFF;' %></li>

        <li >   
<div class="dropdown" style=" padding-top:10px">
  <button class="btn btn-default dropdown-toggle" style="color:#ffffff;background-color:#6b238e" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
    Account
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu" style="color:#ffffff;background-color:#6b238e" aria-labelledby="dropdownMenu1">
  	<li role="presentation"><%= link_to "Settings", edit_user_registration_path,:style=>'color:#ffffff;'%></li>
    <li role="presentation"><%= link_to "Logout", destroy_user_session_path, :method => :delete ,:style=>'color:#ffffff;'%></li>
    
  </ul>




</div>
</li>
<%end %>
           <li> </li>
          
          </ul>
        </div>
      </div>

    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
        <div class="col-lg-3" style="padding-top:40px">
          <%if(current_user) %>
          <div class="well sidebar-nav">
           
            <ul class="nav nav-list">
              <li style="font-weight:bold" class="nav-header">Other Links</li>
              
              <li><%= link_to "Dashboard", dashboard_index_path  %></li>
            </ul>
          </div><!--/.well -->
            <%end%>
        </div><!--/span-->
    

      </div><!--/row-->

<br/>
      <footer>
        <p>&copy; Created for All Stars Full Stack challenge 2015</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
